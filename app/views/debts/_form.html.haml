= form_for @debt do |f|
	- if @debt.errors.any?
		#error_explanation
			%h2= "#{pluralize(@debt.errors.count, "error")} prohibited this debt from being saved:"
			%ul
				- @debt.errors.full_messages.each do |msg|
					%li= msg
	= f.hidden_field :creditor_id
	= f.hidden_field :debtor_id
	.field
		= f.label :currency
		= f.text_field :currency
	.field
		= f.label :amount
		= f.text_field :amount
	.field
		= f.label :remaining
		= f.text_field :remaining
	.field
		= f.label :description
		= f.text_area :description
	.actions
		= f.submit :Add