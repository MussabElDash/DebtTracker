- if user_signed_in?
	%div 
		= image_tag(current_user.image, size: '32x32', alt: 'Profile Picture missing')
		= current_user.name
		= link_to "Sign out", destroy_user_session_path, method: :delete
- elsif !params[:controller].include?("devise")
	%div= link_to "Sign in", new_user_session_path
	%div= link_to "Sign up", new_user_registration_path
	/ %div= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)
	/ %div= link_to "Sign in with Google", user_omniauth_authorize_path(:google)
	%a.btn.btn-social-icon.btn-facebook{href: user_omniauth_authorize_path(:facebook)}
		%i.fa.fa-facebook
	%a.btn.btn-social-icon.btn-google-plus{href: user_omniauth_authorize_path(:google)}
		%i.fa.fa-google-plus