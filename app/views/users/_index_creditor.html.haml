%h3 As Creditor
%h4 Recent
- user.debts_creditor.order(updated_at: :desc).
	- where.not(confirmed_at: nil).take(2).each do |debt|
	%div{id: "creditor_recent_#{debt.id}"}
		amount : 
		= debt.amount
		%br
		remaining : 
		= debt.remaining
		%br
		currency :
		= "#{Debt::CURRENCIES[debt.currency][:name]} (#{debt.currency})"
		%br
		- if debt.description.length > 0
			= debt.description
			%br
		debtor : 
		= link_to debt.debtor.name, user_path(debt.debtor)
		/ = link_to :Remove, destroy_debt_path(debt), method: :delete

